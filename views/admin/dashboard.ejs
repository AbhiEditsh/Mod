<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - ETS2 Mods</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="admin-container">
        <aside class="sidebar">
            <h2>Admin Panel</h2>
            <nav>
                <ul>
                    <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
                    <li><a href="/admin/mods">Manage Mods</a></li>
                    <li><a href="/admin/mods/add">Add New Mod</a></li>
                    <li><a href="/admin/tutorials">Manage Tutorials</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>
            </nav>
        </aside>

        <main class="content">
            <h1>Dashboard</h1>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Mods</h3>
                    <p class="stat-number">
                        <%= totalMods %>
                    </p>
                </div>
                <div class="stat-card">
                    <h3>Total Tutorials</h3>
                    <p class="stat-number">
                        <%= totalTutorials %>
                    </p>
                </div>
            </div>

            <section class="recent-mods">
                <h2>Recent Mods</h2>
                <table class="mods-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Version</th>
                            <th>Downloads</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% mods.forEach(mod=> { %>
                            <tr>
                                <td>
                                    <%= mod.title %>
                                </td>
                                <td>
                                    <%= mod.category %>
                                </td>
                                <td>
                                    <%= mod.version %>
                                </td>
                                <td>
                                    <%= mod.downloads %>
                                </td>
                                <td>
                                    <a href="/admin/mods/edit/<%= mod._id %>" class="btn-small">Edit</a>
                                    <form action="/admin/mods/delete/<%= mod._id %>" method="POST"
                                        style="display: inline;">
                                        <button type="submit" class="btn-small btn-danger"
                                            onclick="return confirm('Are you sure?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>

</html>